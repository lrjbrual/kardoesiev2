        <div class="newsletter" id="email">
          <form action="subscribe" id="invite" method="POST" onsubmit="return false;">
            <h5><strong>Newsletter</strong></h5>
            <p>Join Our Newseletter and stay updated!</p>
            <div class="col-md-3"></div>
            <div class="col-md-3">
              <input class="form-control" type="text" placeholder="your@email.com" name="email" id="address">
            </div>
            <div class="col-md-3">
              <input class="btn btn-block btn-success btnsignup" type="submit" value="Sign up">
            </div>
            <div class="col-md-3"></div>
            <div class="clearfix"></div>
            <br>
            <div class="col-md-3"></div>
            <div class="col-md-6"><span id="result"></span></div>
            <div class="col-md-3"></div>
          </form>
        </div>
        <script type="text/javascript">
          $(document).ready(function() {
          $(".btnsignup").on("click",function(){
          var email = $("#address").val();
          if(validateEmail(email)){
          $.post("http://phptravels.com/subscribe.php",$("#invite").serialize(),function(resp){
          // console.log(resp);
          $("#result").html("<div class='alert alert-success'>"+resp+"</div>").fadeIn("slow");
          });
          }else{
          $("#result").html("");
          $("#result").html("<div class='alert alert-danger'>Email Address is Invalid</div>").fadeIn("slow");
          }
          setTimeout(function(){  $("#result").html("");  }, 15000);
          });
          });
          function validateEmail(email) {
          var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
          return re.test(email);
          }
        </script>
