      <p>
        <h3><strong>Need Help?</strong></h3>
        <br>
        Write us your inquiry.
      </p>
      <%= form_for :form, url: main_app.forms_path do |f| %>
      <form class="col-md-6">
          <%= f.text_field :name, required:true, type:"text", placeholder:"Type your Name", class: "form-control" %>
          <br>
          <%= f.text_field :phone, required:true, type:"tel", placeholder:"Tel. number", class: "form-control" %>
          <br>
          <%= f.text_field :email, required:true, type:"email", placeholder:"youremail@email.com", class: "form-control" %>
          <br>
          <%= f.text_field :reference, required:true, type:"text", placeholder:"Order Confimation No.", class: "form-control" %>
          <!-- <br>
          <select class="form-control">
            <option>Select the title:</option>
            <option>About the Product</option>
            <option>Payment</option>
            <option>Refund</option>
            <option>Follow Up</option>
          </select> -->
          <br>
          <%= f.text_area :message, required:true, type:"text", placeholder:"Your message", class: "form-control" %>
          <br>
          <div class="hidden">
            <%= f.text_field :nickname, hint: 'leave this blanck' %>
          </div>
            <%= f.submit 'Send Message', class:"btn btn-block btn-success" %>
          <br>
        </div>
        <div class="col-md-3"><span id="result"></span></div>
      </form>
      <% end %>
